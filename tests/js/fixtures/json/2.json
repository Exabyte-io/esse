{
    "$id": "system/in-set",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "System in-set schema",
    "properties": {
        "inSet": {
            "type": "array",
            "items": {
                "allOf": [
                    {
                        "$id": "system/entity-reference",
                        "$schema": "http://json-schema.org/draft-07/schema#",
                        "title": "entity reference schema",
                        "properties": {
                            "_id": {
                                "description": "entity identity",
                                "type": "string"
                            },
                            "cls": {
                                "description": "entity class",
                                "type": "string"
                            },
                            "slug": {
                                "description": "entity slug",
                                "type": "string"
                            }
                        }
                    },
                    {
                        "type": "object",
                        "properties": {
                            "type": {
                                "type": "string"
                            },
                            "index": {
                                "type": "number"
                            }
                        }
                    }
                ]
            }
        },
        "valueMapFunction": {
            "description":
                "Specifies the function to convert the currentValue in UI.",
            "type": "string",
            "enum": [
                "toString",
                "toContactUs",
                "toPlusMinusSign",
                "toUnlimited",
                "toSupportSeverity"
            ],
            "default": "toString"
        }
    }
}
