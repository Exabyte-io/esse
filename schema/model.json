{
    "schemaId": "model",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "model schema (base)",
    "allOf": [
        {
            "$ref": "./core/primitive/slugified_entry.json"
        }
    ],
    "properties": {
        "graph": {
            "description": "Graph of unit models (nodes)",
            "$ref": "core/primitive/graph.json"
        },
        "units": {
            "description": "List of unit models (containing model data)",
            "type": "array",
            "items": {
                "$ref": "models_directory/unit_base_referable.json"
            }
        },
        "method": {
            "description": "Additional method object to catch global method information and parameters",
            "$ref": "method.json"
        }
    },
    "required": [
        "name",
        "graph",
        "units"
    ]
}
