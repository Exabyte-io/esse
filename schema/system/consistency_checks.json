{
    "$id": "system/consistency-checks",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "consistency checks",
    "properties": {
        "keys": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "messages": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "key": {
                        "type": "string"
                    },
                    "checkName": {
                        "enum": [
                            "atomsTooClose"
                        ],
                        "description": "Name of the consistency check which is exported as an enum"
                    },
                    "severity": {
                        "enum": [
                            "info",
                            "warning",
                            "error"
                        ]
                    },
                    "message": {
                        "type": "string"
                    }
                },
                "required": [
                    "key",
                    "checkName",
                    "severity",
                    "message"
                ]
            }
        }
    },
    "required": [
        "keys",
        "messages"
    ]
}
