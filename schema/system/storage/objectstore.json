{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Object storage schema",
    "properties": {
        "type": {
            "description": "Storage type",
            "enum": [
                "object-storage"
            ]
        },
        "url": {
            "description": "File path on a cloud storage",
            "type": "string"
        },
        "container": {
            "description": "container name where file is uploaded",
            "type": "string"
        },
        "provider": {
            "description": "cloud storage provider where file is stored",
            "type": "string",
            "enum": [
                "ec2",
                "azure-blob"
            ]
        }
    }
}
