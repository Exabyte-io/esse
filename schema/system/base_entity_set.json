{
    "schemaId": "system-base-entity-set",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "extended base entity set schema",
    "properties": {
        "isEntitySet": {
            "type": "boolean"
        },
        "entitySetType": {
            "type": "string"
        },
        "inSet": {
            "type": "array",
            "items": {
                "allOf": [
                    {
                        "allOf": [
                            {
                                "$ref": "../system/entity_reference.json"
                            }
                           
                        ]
                    },
                    {
                        "type": "object",
                        "properties": {
                            "type": {
                                "type": "string"
                            },
                            "index": {
                                "type": "number"
                            }
                        }
                    }
                ]
            }
        }
    }
}
