{
    "$id": "system/job-extended",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "extended job schema",
    "properties": {
        "mode": {
            "type": "string"
        },
        "isExternal": {
            "type": "boolean"
        },
        "_materials": {
            "type": "array",
            "items": {
                "$id": "system/entity-reference",
                "$schema": "http://json-schema.org/draft-04/schema#",
                "title": "entity reference schema",
                "properties": {
                    "_id": {
                        "description": "entity identity",
                        "type": "string"
                    },
                    "cls": {
                        "description": "entity class",
                        "type": "string"
                    },
                    "slug": {
                        "description": "entity slug",
                        "type": "string"
                    }
                }
            }
        },
        "_materialsSet": {
            "$id": "system/entity-reference",
            "$schema": "http://json-schema.org/draft-04/schema#",
            "title": "entity reference schema",
            "properties": {
                "_id": {
                    "description": "entity identity",
                    "type": "string"
                },
                "cls": {
                    "description": "entity class",
                    "type": "string"
                },
                "slug": {
                    "description": "entity slug",
                    "type": "string"
                }
            }
        },
        "purged": {
            "type": "boolean"
        },
        "purgedAt": {
            "type": "number"
        },
        "dataset": {
            "type": "object"
        }
    }
}