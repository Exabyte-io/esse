{
    "schemaId": "reusable-band-gap",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "band gap schema",
    "allOf": [
        {
            "$ref": "../definitions/primitive/scalar.json"
        }
    ],
    "properties": {
        "kpointConduction": {
            "description": "kpoint inside conduction band in crystal coordinates",
            "$ref": "../definitions/abstract/point.json"
        },
        "kpointValence": {
            "description": "kpoint inside valence band in crystal coordinates",
            "$ref": "../definitions/abstract/point.json"
        },
        "type": {
            "type": "string",
            "enum": [
                "direct",
                "indirect"
            ]
        },
        "units": {
            "$ref": "../definitions/units.json#/energy"
        }
    },
    "required": [
        "type"
    ]
}
