{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "data IO unit schema",
    "type": "object",
    "allOf": [
        {
            "$ref": "file:../unit.json"
        }
    ],
    "properties": {
        "type": {
            "enum": [
                "io"
            ]
        },
        "subtype": {
            "enum": [
                "input",
                "output"
            ]
        },
        "source": {
            "enum": [
                "api",
                "db"
            ]
        },
        "input": {
            "type": "array",
            "items": {
                "anyOf": [
                    {
                        "$ref": "file:io/api.json"
                    },
                    {
                        "$ref": "file:io/db.json"
                    }
                ]
            }
        }
    },
    "required": [
        "subtype",
        "flavor",
        "input"
    ]
}
