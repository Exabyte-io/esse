{
    "$id": "workflow/unit/io",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "data IO unit schema",
    "type": "object",
    "allOf": [
        {
            "$ref": "./base.json"
        }
    ],
    "properties": {
        "type": {
            "enum": [
                "io"
            ]
        },
        "subtype": {
            "enum": [
                "input",
                "output",
                "dataFrame"
            ]
        },
        "source": {
            "enum": [
                "api",
                "db",
                "object_storage"
            ]
        },
        "input": {
            "type": "array",
            "items": {
                "anyOf": [
                    {
                        "$ref": "io/api.json",
                        "additionalProperties": true
                    },
                    {
                        "$ref": "io/db.json",
                        "additionalProperties": true
                    },
                    {
                        "$ref": "io/object_storage.json",
                        "additionalProperties": true
                    }
                ]
            }
        }
    },
    "required": [
        "subtype",
        "source",
        "input"
    ]
}
