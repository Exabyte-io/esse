{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "data IO unit schema",
    "type": "object",
    "allOf": [
        {
            "$ref": "../unit.json"
        }
    ],
    "properties": {
        "type": {
            "enum": [
                "io"
            ]
        },
        "io": {
            "type": "object",
            "properties": {
                "subtype": {
                    "enum": [
                        "input",
                        "output"
                    ]
                },
                "flavor": {
                    "enum": [
                        "api",
                        "db"
                    ]
                },
                "input": {
                    "type": "array",
                    "items": {
                        "anyOf": [
                            {
                                "$ref": "file:io/api.json"
                            },
                            {
                                "$ref": "file:io/db.json"
                            }
                        ]
                    }
                }
            },
            "required": [
                "subtype",
                "flavor",
                "input"
            ]
        }
    }
}
