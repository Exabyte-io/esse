{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "result schema",
    "type": "object",
    "properties": {
        "name": {
            "description": "name of this result",
            "type": "string"
        },
        "publish": {
            "description": "whether to publish this result",
            "type": "boolean"
        },
        "args": {
            "description": "Specific arguments for the required result.",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "key": {
                        "description": "Name of the argument.",
                        "type": "string"
                    },
                    "value": {
                        "description": "Value of the argument.",
                        "type": [
                            "string",
                            "array",
                            "object",
                            "number",
                            "boolean"
                        ]
                    }
                },
                "required": [
                    "key",
                    "value"
                ]
            }
        }
    },
    "required": [
        "name"
    ]
}
