{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "data IO unit schema",
    "type": "object",
    "allOf": [
        {
            "$ref": "processing.json"
        }
    ],
    "properties": {
        "processing": {
            "type": "object",
            "properties": {
                "operation": {
                    "enum": [
                        "dataIO"
                    ]
                },
                "flavor": {
                    "enum": [
                        "input",
                        "output"
                    ]
                },
                "palate": {
                    "enum": [
                        "rest_api"
                    ]
                },
                "input": {
                    "type": "array",
                    "items": {
                        "anyOf": [
                            {
                                "$ref": "file:data_io/rest_api.json"
                            }
                        ]
                    }
                }
            },
            "required": [
                "operation",
                "flavor",
                "input"
            ]
        }
    }
}
