{
    "schemaId": "workflow-unit",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "workflow unit schema",
    "type": "object",
    "allOf": [
        {
            "$ref": "../system/tags.json"
        },
        {
            "$ref": "../system/status.json"
        },
        {
            "$ref": "unit/runtime/runtime_items.json"
        }
    ],
    "properties": {
        "_id": {
            "type": "string"
        },
        "isDraft": {
            "description": "defines whether to store the results/properties extracted in this unit to properties collection or not",
            "type": "boolean"
        },
        "type": {
            "description": "type of the unit",
            "type": "string"
        },
        "name": {
            "description": "name of the unit. e.g. pw_scf",
            "type": "string"
        },
        "status": {
            "description": "Status of the unit.",
            "type": "string",
            "enum": [
                "idle",
                "active",
                "warning",
                "error",
                "finished"
            ]
        },
        "head": {
            "description": "Whether this unit is the first one to be executed.",
            "type": "boolean"
        },
        "flowchartId": {
            "description": "Identity of the unit in the workflow. Used to trace the execution flow of the workflow.",
            "type": "string"
        },
        "next": {
            "description": "Next unit's flowchartId. If empty, the current unit is the last.",
            "type": "string"
        },
        "enableRender": {
            "description": "Whether Rupy should attempt to use Jinja templating to add context variables into the unit",
            "type": "boolean"
        },
        "messages": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "context": {
            "type": "object"
        }
    },
    "required": [
        "type",
        "flowchartId"
    ]
}
