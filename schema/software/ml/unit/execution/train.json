{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "train unit schema",
    "allOf": [
        {
            "$ref": "file:../../../../workflow/unit/execution.json"
        }
    ],
    "properties": {
        "execution": {
            "type": "object",
            "properties": {
                "app": {
                    "exec": {
                        "enum": [
                            "train"
                        ]
                    },
                    "flavor": {
                        "enum": [
                            "train"
                        ]
                    }
                },
                "input": {
                    "description": "model train unit (NOTE: info about method, eg. regression/linear is taken from (sub)workflow)",
                    "type": "object",
                    "properties": {
                        "features": {
                            "description": "material features used for model fitting",
                            "type": "array",
                            "items": {
                                "description": "material features (properties) in a 'flattened' format",
                                "type": "string"
                            }
                        },
                        "targets": {
                            "description": "target properties to train for",
                            "type": "array",
                            "items": {
                                "description": "material features (properties) in a 'flattened' format",
                                "type": "string"
                            }
                        },
                        "dataFrame": {
                            "type": "object",
                            "properties": {
                                "scope": {
                                    "description": "flowchartId of the unit to get dataFrame from",
                                    "type": "string"
                                },
                                "name": {
                                    "description": "name of variable inside local scope of the specified unit",
                                    "type": "string",
                                    "enum": [
                                        "dataFrame"
                                    ]
                                }
                            }
                        }
                    },
                    "required": [
                        "features",
                        "targets",
                        "dataFrame"
                    ]
                }
            }
        }
    }
}
