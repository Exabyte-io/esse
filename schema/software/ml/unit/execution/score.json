{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "train score schema",
    "allOf": [
        {
            "$ref": "file:../../../../workflow/unit/execution.json"
        }
    ],
    "properties": {
        "execution": {
            "type": "object",
            "properties": {
                "app": {
                    "exec": {
                        "enum": [
                            "score"
                        ]
                    },
                    "flavor": {
                        "enum": [
                            "score"
                        ]
                    }
                },
                "input": {
                    "type": "object",
                    "properties": {
                        "dataFrame": {
                            "type": "object",
                            "properties": {
                                "scope": {
                                    "description": "flowchartId of the unit to get dataFrame from",
                                    "type": "string"
                                },
                                "name": {
                                    "description": "name of variable inside local scope of the specified unit",
                                    "type": "string",
                                    "enum": [
                                        "dataFrame"
                                    ]
                                }
                            }
                        }
                    },
                    "required": [
                        "dataFrame"
                    ]
                }
            }
        }
    }
}
