{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "scale and reduce unit schema",
    "allOf": [
        {
            "$ref": "file:../../../../../workflow/unit/processing.json"
        }
    ],
    "type": "object",
    "properties": {
        "processing": {
            "type": "object",
            "properties": {
                "operation": {
                    "type": "string",
                    "enum": [
                        "data_transformation"
                    ]
                },
                "flavor": {
                    "type": "string",
                    "enum": [
                        "scale_and_reduce"
                    ]
                },
                "input": {
                    "type": "object",
                    "properties": {
                        "scaler": {
                            "description": "type of scaler to be applied",
                            "type": "string",
                            "default": "standard_scaler",
                            "enum": [
                                "standard_scaler",
                                "min_max_scaler",
                                "robust_scaler"
                            ]
                        },
                        "perFeature": {
                            "oneOf": [
                                {
                                    "$ref": "scale_and_reduce/min_max.json"
                                },
                                {
                                    "$ref": "scale_and_reduce/robust.json"
                                },
                                {
                                    "$ref": "scale_and_reduce/standard.json"
                                }
                            ]
                        }
                    },
                    "required": [
                        "scaler"
                    ]
                }
            },
            "required": [
                "operation",
                "flavor",
                "input"
            ]
        }
    }
}
