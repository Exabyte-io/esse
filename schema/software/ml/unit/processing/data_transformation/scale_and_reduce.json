{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "scale and reduce unit schema",
    "properties": {
        "type": {
            "enum": [
                "data_transformation"
            ]
        },
        "operation": {
            "description": "type of scaler to utilize, by default 'Sklearn.StandardScaler' is used",
            "enum": [
                "standard_scaler"
            ]
        },
        "input": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "variance": {
                        "description": "variance in original training data",
                        "type": "number"
                    },
                    "mean": {
                        "description": "mean value of the original training data",
                        "type": "number"
                    },
                    "scale": {
                        "description": "scale multiplier for this feature/property",
                        "type": "number"
                    },
                    "name": {
                        "description": "feature/property name in 'flattened' format",
                        "type": "string"
                    }
                },
                "required": [
                    "name"
                ]
            }
        }
    }
}
