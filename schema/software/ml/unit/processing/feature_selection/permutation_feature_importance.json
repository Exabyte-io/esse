{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "scale and reduce unit schema",
    "allOf": [
        {
            "$ref": "file:../../../../../workflow/unit/processing.json"
        }
    ],
    "properties": {
        "processing": {
            "type": "object",
            "properties": {
                "operation": {
                    "enum": [
                        "feature_selection"
                    ]
                },
                "flavor": {
                    "enum": [
                        "permutation_feature_importance"
                    ]
                },
                "input": {
                    "type": "object",
                    "properties": {
                        "nFeatures": {
                            "description": "number of features to select for model training. If equal to 0, will use all available features",
                            "type": "number"
                        }
                    },
                    "required": [
                        "nFeatures"
                    ]
                }
            },
            "required": [
                "operation",
                "flavor",
                "input"
            ]
        }
    }
}
