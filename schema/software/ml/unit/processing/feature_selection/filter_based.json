{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "filter-based feature selection unit schema",
    "allOf": [
        {
            "$ref": "file:../../../../../workflow/unit/processing.json"
        }
    ],
    "type": "object",
    "properties": {
        "processing": {
            "type": "object",
            "properties": {
                "operation": {
                    "type": "string",
                    "enum": [
                        "feature_selection"
                    ]
                },
                "flavor": {
                    "type": "string",
                    "enum": [
                        "filter_based"
                    ]
                },
                "input": {
                    "type": "object",
                    "properties": {
                        "nFeatures": {
                            "description": "number of features to select for model training. If equal to 0, will use all available features",
                            "type": "number"
                        },
                        "algorithm": {
                            "description": "feature selection algorithm following sklearn.feature_selection",
                            "type": "string",
                            "enum": [
                                "f_regression"
                            ]
                        },
                        "dataFrame": {
                            "$ref": "file:../../../../../workflow/unit/_input.json"
                        }
                    },
                    "required": [
                        "nFeatures",
                        "algorithm",
                        "dataFrame"
                    ]
                }
            },
            "required": [
                "operation",
                "flavor",
                "input"
            ]
        }
    }
}
