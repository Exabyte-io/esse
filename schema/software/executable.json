{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "executable schema",
    "type": "object",
    "allOf": [
        {
            "$ref": "file:./mixins/runtime_items.json"
        }
    ],
    "properties": {
        "name": {
            "description": "The name of the executable. e.g. pw.x",
            "type": "string"
        },
        "applicationId": {
            "description": "_id of the application this executable belongs to",
            "type": "string"
        }
    },
    "required": [
        "name",
        "applicationId"
    ]
}
