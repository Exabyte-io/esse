{
    "schemaId": "method",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "method schema (base)",
    "properties": {
        "name": {
            "description": "Human-readable name for compound method",
            "type": "string"
        },
        "methodGraph": {
            "description": "Graph of unit methods (nodes)",
            "$ref": "core/primitive/acyclic_graph.json"
        },
        "units": {
            "type": "array",
            "items": {
                "allOf": [
                    {
                        "$ref": "method_units/method_unit_base.json"
                    },
                    {
                        "$ref": "core/primitive/acyclic_graph/base_node.json#/definitions/flowchart-id"
                    }
                ]
            }
        }
    },
    "required": [
        "name",
        "methodGraph",
        "units"
    ]
}
