{
    "$id": "method",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "method schema (container of unit methods)",
    "allOf": [
        {
            "$ref": "system/name.json"
        },
        {
            "$ref": "system/tags.json"
        }
    ],
    "properties": {
        "path": {
            "$ref": "core/reusable/category_path.json"
        },
        "units": {
            "type": "array",
            "items": {
                "$ref": "method/unit_method.json"
            }
        }
    },
    "required": [
        "units"
    ]
}
