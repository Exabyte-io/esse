{
    "schemaId": "project",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "project schema",
    "type": "object",
    "allOf": [
        {
            "description": "defaultable entity schema",
            "$ref": "system/defaultable.json"
        },
        {
            "description": "defaultable entity schema",
            "$ref": "system/status.json"
        }
    ],
    "properties": {
        "gid": {
            "description": "project GID",
            "type": "number"
        },
        "clusterBasedChargeRates": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "timestamp": {
                        "type": "number"
                    },
                    "rate": {
                        "type": "number"
                    },
                    "hostname": {
                        "type": "string"
                    }
                },
                "required": ["timestamp", "rate", "hostname"]
            }
        },
        "isExternal": {
            "type": "boolean"
        }
    },
    "required": [
        "gid",
        "chargeRate"
    ]
}
