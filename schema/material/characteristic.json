{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "characteristic schema",
    "properties": {
        "_id": {
            "description": "identity of this characteristic",
            "type": "string"
        },
        "exabyteId": {
            "description": "identity of the corresponding material inside exabyte materials bank",
            "type": "string"
        },
        "data": {
            "description": "container of the information, specific to each characteristic",
            "type": "object"
        },
        "access": {
            "$ref": "file:../security/access_legacy.json"
        },
        "owner": {
            "$ref": "file:../security/_owner.json"
        },
        "source": {
            "description": "where this characteristic was obtained from, eg. `exabyte job`",
            "type": "object",
            "properties": {
                "type": {
                    "description": "type of the source of this characteristic, eg. `exabyte`, `experiment`",
                    "type": "string"
                },
                "info": {
                    "description": "additional information about this source",
                    "oneOf": [
                        {
                            "$ref": "file:characteristics/sources_info/exabyte.json"
                        },
                        {
                            "$ref": "file:characteristics/sources_info/experiment.json"
                        }
                    ]
                }
            }
        }
    },
    "required": [
        "_id",
        "exabyteId",
        "data",
        "access",
        "owner",
        "source"
    ]
}
