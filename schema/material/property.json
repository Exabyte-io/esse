{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "property schema",
    "properties": {
        "_id": {
            "description": "identity of this property",
            "type": "string"
        },
        "exabyteId": {
            "description": "identity of the corresponding material inside exabyte materials bank",
            "type": "string"
        },
        "data": {
            "description": "container of the information, specific to each property",
            "type": "object"
        },
        "owner": {
            "$ref": "file:../system/entity_reference.json"
        },
        "source": {
            "$ref": "file:../primitive/reference.json"
        }
    },
    "required": [
        "_id",
        "exabyteId",
        "data",
        "owner",
        "source"
    ]
}
