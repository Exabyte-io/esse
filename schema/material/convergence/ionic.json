{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "ionic convergence schema",
    "properties": {
        "electronicConvergences": {
            "type": "array",
            "items": {
                "$ref": "file:electronic.json"
            }
        },
        "iterations": {
            "description": "criteria",
            "type": "number"
        },
        "constraints": {
            "cellSize": "boolean",
            "cellShape": "boolean",
            "atomicPositions": "boolean",
            "atomicMovements": {
                "description": "object containing the ids of all atoms and whether particular atom is allowed to relax in all 3 supercell directions",
                "$ref": "file:../../../primitive/_array_of_ids",
                "items": {
                    "x": "boolean",
                    "y": "boolean",
                    "z": "boolean"
                }
            }
        },
        "forceCriteria": {
            "description": "criteria",
            "$ref": "file:../primitive/scalar.json"
        },
        "finalEnergy": {
            "description": "final total energy of the converged system",
            "$ref": "file:../characteristics/total_energy.json"
        }
    }
}
