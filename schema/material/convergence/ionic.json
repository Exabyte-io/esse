{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "ionic convergence schema",
    "properties": {
        "electronicConvergences": {
            "type": "array",
            "items": {
                "$ref": "file:electronic.json"
            }
        },
        "iterations": {
            "description": "number of iterations during electronic self-consistency convergence",
            "type": "number"
        },
        "constraints": {
            "description": "various types of constrain applied on the cell and atoms for the relaxation",
            "$ref": "file:constraints.json"
        },
        "forceCriteria": {
            "description": "criteria for force convergence",
            "type": "number",
            "units": {
                "enum": [
                    "eV/a.u."
                ]
            }
        },
        "results": {
            "description": "Resulting properties extracted from the unit, besides the textual output.",
            "type": "array",
            "items": {
                "$ref": "file:../../job/model/method/workflow/unit/_result.json"
            }
        }
    },
    "required": [
        "electronicConvergences",
        "iterations"
    ]
}
