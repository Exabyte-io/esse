{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "electronic self consistency convergence schema",
    "properties": {
        "iterations": {
            "description": "number of iterations during electronic self-consistency convergence",
            "type": "number"
        },
        "energyCriteria": {
            "description": "criteria for energy convergence",
            "type": "number",
            "units": {
                "enum": [
                    "eV",
                    "rydberg",
                    "hartree"
                ]
            }
        },
        "forceCriteria": {
            "description": "criteria for force convergence",
            "type": "number",
            "units": {
                "enum": [
                    "eV/a.u."
                ]
            }
        },
        "results": {
            "description": "Resulting properties extracted from the unit, besides the textual output.",
            "type": "array",
            "items": {
                "$ref": "file:../../job/model/method/workflow/unit/_result.json"
            }
        }
    },
    "required": [
        "iterations"
    ]
}
