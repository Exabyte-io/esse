{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "electronic self consistency convergence schema",
    "properties": {
        "iterations": {
            "description": "criteria",
            "type": "number"
        },
        "energyCriteria": {
            "description": "criteria",
            "$ref": "file:../../primitive/scalar.json"
        },
        "forceCriteria": {
            "description": "criteria",
            "$ref": "file:../../primitive/scalar.json"
        },
        "finalEnergy": {
            "description": "final total energy of the converged system",
            "anyOf": [
                {
                    "$ref": "file:../characteristics/total_energy.json"
                },
                {
                    "$ref": "file:../characteristics/total_energy_contributions.json"
                }
            ]
        }
    },
    "required": [
        "iterations",
        "finalEnergy"
    ]
}
