{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "convergence supercell atomic constraints schema",
    "properties": {
        "atoms": {
            "description": "array of atom ids",
            "$ref": "file:../../primitive/_array_of_ids.json"
        },
        "unitCell": {
            "description": "array of vectors of boolean denoting whether a particular atom is constrained in the x, y, or z direction",
            "type": "array",
            "items": {
                "x": "boolean",
                "y": "boolean",
                "z": "boolean"
            }
        }
    },
    "required": [
        "atoms",
        "unitCell"
    ]
}
