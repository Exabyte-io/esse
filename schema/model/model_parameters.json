{
    "$id": "model/model-parameters",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "ModelParameters",
    "type": "object",
    "oneOf": [
        {
            "$id": "model/mixins/dft/lda-functional",
            "$schema": "http://json-schema.org/draft-04/schema#",
            "title": "LDA functional mixin",
            "type": "object",
            "properties": {
                "functional": {
                    "enum": [
                        "pz"
                    ]
                }
            }
        },
        {
            "$id": "model/mixins/dft/gga-functional",
            "$schema": "http://json-schema.org/draft-04/schema#",
            "title": "GGA functional mixin",
            "type": "object",
            "properties": {
                "functional": {
                    "enum": [
                        "pbe",
                        "pbesol"
                    ]
                }
            }
        },
        {
            "$id": "model/mixins/dft/mgga-functional",
            "$schema": "http://json-schema.org/draft-04/schema#",
            "title": "Meta-GGA functional mixin",
            "type": "object",
            "properties": {
                "functional": {
                    "enum": [
                        "scan"
                    ]
                }
            }
        },
        {
            "$id": "model/mixins/dft/hybrid-functional",
            "$schema": "http://json-schema.org/draft-04/schema#",
            "title": "Hybrid functional mixin",
            "type": "object",
            "properties": {
                "functional": {
                    "enum": [
                        "hse06",
                        "b3lyp"
                    ]
                }
            }
        },
        {
            "$id": "model/mixins/dft/double-hybrid-functional",
            "$schema": "http://json-schema.org/draft-04/schema#",
            "title": "Double hybrid functional mixin",
            "type": "object",
            "properties": {
                "functional": {
                    "enum": [
                        "b2plyp"
                    ]
                }
            }
        }
    ],
    "properties": {
        "hubbardType": {
            "enum": [
                "u"
            ]
        },
        "spinPolarization": {
            "enum": [
                "collinear",
                "non-collinear"
            ]
        },
        "spinOrbitCoupling": {
            "type": "boolean"
        },
        "dispersionCorrection": {
            "enum": [
                "dft-d2",
                "dft-d3",
                "xdm",
                "ts"
            ]
        }
    }
}