{
    "$id": "properties-directory/structural/basis",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "basis schema",
    "type": "object",
    "properties": {
        "elements": {
            "type": "array",
            "items": {
                "$ref": "basis/atomic_element.json"
            }
        },
        "coordinates": {
            "type": "array",
            "items": {
                "$ref": "basis/atomic_coordinate.json"
            }
        },
        "name": {
            "type": "string"
        },
        "units": {
            "type": "string"
        },
        "bonds": {
            "$ref": "basis/bonds.json"
        }
    },
    "required": [
        "elements",
        "coordinates"
    ]
}
