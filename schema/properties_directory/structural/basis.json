{
    "schemaId": "properties-directory-structural-basis",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "basis schema",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "default": "basis"
        },
        "elements": {
            "$ref": "basis/atomic_elements.json"
        },
        "coordinates": {
            "$ref": "basis/atomic_coordinates.json"
        },
        "units": {
            "description": "Units of atoms' coordinates. TODO: add enum from code.js ATOMIC_COORD_UNITS constant",
            "type": "string",
            "default": "crystal"
        }
    },
    "required": [
        "elements",
        "coordinates",
        "units"
    ]
}
