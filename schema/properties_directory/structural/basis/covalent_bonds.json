{
    "schemaId": "properties-directory-structural-covalent-bonds",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "covalent bonds schema",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "atomPair": {
                "description": "indices of the two atoms forming a covalent bond",
                "allOf": [
                    {
                        "$ref": "../../../core/primitive/array_of_ids.json"
                    }
                ],
                "minItems": 2,
                "maxItems": 2
            },
            "bondType": {
                "type" : "string",
                "enum": [
                    "single",
                    "double",
                    "triple",
                    "quadruple",
                    "aromatic",
                    "other"
                ]
            }
        },
        "uniqueItems": true
    }
}
