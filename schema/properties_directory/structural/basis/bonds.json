{
    "$id": "properties-directory/structural/basis/bonds",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "bonds schema",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "atomPair": {
                "description": "indices of the two connected atoms",
                "allOf": [
                    {
                        "$ref": "../../../core/primitive/array_of_ids.json"
                    }
                ],
                "minItems": 2,
                "maxItems": 2
            },
            "bondType": {
                "type": "string",
                "enum": [
                    "single",
                    "double",
                    "triple",
                    "quadruple",
                    "aromatic",
                    "tautomeric",
                    "dative",
                    "other"
                ]
            }
        }
    },
    "uniqueItems": true
}
