{
    "$id": "properties-directory/scalar/valence-band-offset",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "valence band offset schema",
    "type": "object",
    "required": [
        "name",
        "units",
        "value"
    ],
    "properties": {
        "name": {
            "enum": [
                "valence_band_offset"
            ],
            "type": "string"
        },
        "units": {
            "anyOf": [
                {
                    "enum": [
                        "kJ/mol",
                        "eV",
                        "J/mol",
                        "hartree",
                        "cm-1",
                        "rydberg",
                        "eV/atom"
                    ]
                },
                {
                    "enum": [
                        "eV/A^2"
                    ]
                }
            ]
        },
        "value": {
            "type": "number"
        }
    }
}