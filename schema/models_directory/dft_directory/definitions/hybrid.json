{
    "schemaId": "models-directory-dft-definitions-hybrid",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Hybrid GGA schema",
    "type": "object",
    "properties": {
        "approximation": {
            "enum": [
                "hybrid"
            ]
        },
        "name": {
            "enum": [
                "PBE0",
                "revPBE0",
                "B3LYP",
                "CAM-B3LYP"
            ]
        },
        "components": {
            "type": "array",
            "items": {
                "anyOf": [
                    {
                        "$ref": "components/local_functional.json"
                    },
                    {
                        "oneOf": [
                            {
                                "$ref": "components/exact_exchange.json"
                            },
                            {
                                "$ref": "components/range_separated_x.json"
                            }
                        ]
                    }
                ]
            }
        },
        "dispersion_correction": {
            "$ref": "components/dispersion_correction.json"
        }
    }
}
