{
    "schemaId": "models-directory-dft",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "density function theory schema",
    "description": "density function theory schema (using SCI-474)",
    "allOf": [
        {
            "$ref": "../model.json"
        }
    ],
    "properties": {
        "type": {
            "properties": {
                "name" : {
                    "type": "string"
                },
                "slug": {
                    "enum": [
                        "ksdft"
                    ],
                    "type": "string"
                }
            }
        },
        "subtype": {
            "name": {
                "enum": [
                    "Local Density Approximation",
                    "Generalized Gradient Approximation",
                    "meta-GGA",
                    "Hybrid Functional",
                    "Double Hybrid Functional"
                ]
            },
            "slug": {
                "enum": [
                    "lda",
                    "gga",
                    "mgga",
                    "hybrid",
                    "dh"
                ]
            }
        },
        "functional": {
            "oneOf": [
                {
                    "$ref": "dft/lda.json"
                },
                {
                    "$ref": "dft/gga.json"
                },
                {
                    "$ref": "dft/meta_gga.json"
                },
                {
                    "$ref": "dft/hybrid.json"
                },
                {
                    "$ref": "dft/double_hybrid.json"
                },
                {
                    "$ref": "dft/custom_functional.json"
                }
            ]
        },
        "modifiers": {
            "$ref": "dft/modifiers.json"
        }
    }
}
