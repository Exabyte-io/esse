{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "Names of final functional objects, i.e. the ones used in calculations",
    "lda": {
        "enum": [
            "spz81",
            "spw92",
            "svwn1",
            "svwn5"
        ]
    },
    "gga": {
        "enum": [
            "b97-d",
            "b97-d3",
            "pbe",
            "revpbe",
            "blyp",
            "bp86"
        ]
    },
    "mgga": {
        "enum": [
            "b97m-v",
            "b97m-rv",
            "m06-l",
            "tpss",
            "revtpss",
            "scan"
        ]
    },
    "hybrid": {
        "enum": [
            "pbe0",
            "revpbe0",
            "scan0",
            "tpss0",
            "b3lyp",
            "cam-b3lyp",
            "hse03",
            "hse06"
        ]
    },
    "doubleHybrid": {
        "enum": [
            "xyg3",
            "b2plyp"
        ]
    },
    "custom": {
        "type": "string",
        "not": {
            "anyOf": [
                {
                    "$ref": "#/lda"
                },
                {
                    "$ref": "#/gga"
                },
                {
                    "$ref": "#/mgga"
                },
                {
                    "$ref": "#/hybrid"
                },
                {
                    "$ref": "#/doubleHybrid"
                }
            ]
        }
    }
}
