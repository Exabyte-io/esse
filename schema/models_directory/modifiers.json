{
    "schemaId": "models-directory-modifier",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "model modifications schema",
    "description": "An addition to a model, which expands upon the underlying physical principle without fundamentally changing the working equations (e.g. in a linear fashion).",
    "type": "object",
    "properties": {
        "general": {
            "type": "array",
            "items": {
                "type": "string",
                "enum": [
                    "external potential"
                ]
            }
        },
        "wavefunction": {
            "type": "array",
            "items": {
                "type": "string",
                "enum": [
                    "explicit correlation",
                    "multi-reference"
                ]
            }
        },
        "densityFunctionalTheory": {
            "type": "array",
            "items": {
                "type": "string",
                "enum": [
                    "hubbard model"
                ]
            }
        }
    }
}
