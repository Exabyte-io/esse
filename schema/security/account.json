{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "account schema",
    "description": "contains information about possible account types",
    "type": "object",
    "properties": {
        "_id": {
            "description": "identity of the account inside a database",
            "type": "string"
        },
        "typeString": {
            "description": "human-readable explanation of this account type",
            "type": "string"
        },
        "type": {
            "description": "integer representation of this account type",
            "type": "integer"
        }
    },
    "oneOf": [
        {
            "properties": {
                "typeString": {
                    "enum": [
                        "root"
                    ]
                },
                "type": {
                    "enum": [
                        -1
                    ]
                }
            }
        },
        {
            "properties": {
                "typeString": {
                    "enum": [
                        "user"
                    ]
                },
                "type": {
                    "enum": [
                        0
                    ]
                }
            }
        },
        {
            "properties": {
                "typeString": {
                    "enum": [
                        "organization"
                    ]
                },
                "type": {
                    "enum": [
                        10
                    ]
                }
            }
        },
        {
            "properties": {
                "typeString": {
                    "enum": [
                        "team"
                    ]
                },
                "type": {
                    "enum": [
                        20
                    ]
                }
            }
        }
    ],
    "required": [
        "type"
    ]
}
