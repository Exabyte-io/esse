{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "access level schema per role",
    "type": "object",
    "properties": {
        "_id": {
            "description": "id of the entity",
            "type": "string"
        },
        "roles": {
            "description": "roles for the entity above",
            "type": "array",
            "items": {
                "description": "human-readable role identifier, eg. `member`, `owner`",
                "type": "string"
            }
        }
    },
    "required": [
        "_id",
        "roles"
    ]
}
