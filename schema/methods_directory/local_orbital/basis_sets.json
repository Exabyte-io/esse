{
    "schemaId": "methods-directory-basis-sets",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "basis sets schema",
    "description": "basis sets schema for non periodic calculations",
    "properties": {
        "type": {
            "enum": [
                "basis-sets"
            ]
        },
        "subtype": {
            "enum": [
                "pople",
                "dunning"
            ]
        },
        "basis_type": {
            "oneOf": [
                {
                    "$ref": "basis_sets/definitions/basis_sets.json#/pople"
                },
                {
                    "$ref": "basis_sets/definitions/basis_sets.json#/dunning"
                }
            ]
        },
        "polarization": {
            "enum": [
                "none",
                "heavy_atoms",
                "all_atoms"
            ]
        },
        "diffuse": {
            "enum": [
                "none",
                "heavy_atoms",
                "all_atoms"
            ]
        }
    }
}
