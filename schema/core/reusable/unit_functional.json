{
    "schemaId": "core-reusable-unit-functional",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "unit functional schema for DFT model",
    "type": "object",
    "properties": {
        "id": {
            "$ref": "../primitive/slugified_entry.json"
        },
        "type": {
            "enum":[
                "exchange",
                "correlation",
                "exchange-correlation",
                "dispersion",
                "kinetic"
            ]
        },
        "fraction": {
            "description": "Contribution of component to final functional object",
            "type": "number"
        }
    },
    "required": [
        "type"
    ]
}
