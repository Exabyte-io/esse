{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "project schema",
    "type": "object",
    "properties": {
        "_id": {
            "description": "project identifier",
            "type": "string"
        },
        "name": {
            "description": "Human-readable project name",
            "type": "string"
        },
        "access": {
            "description": "Project's access level",
            "$ref": "file:../system/access_legacy.json"
        },
        "owner": {
            "description": "The owner of the project.",
            "$ref": "file:../system/owner.json"
        },
        "slug": {
            "description": "project's slugified name field for Unix-naming safe purposes",
            "type": "string"
        },
        "goldName": {
            "description": "Project's name inside the allocation management system, includes username. e.g. user-my-project-1",
            "type": "string"
        }
    },
    "required": [
        "_id",
        "name",
        "access",
        "owner",
        "slug",
        "goldName"
    ]
}
