{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "application schema",
    "type": "object",
    "properties": {
        "name": {
            "description": "The name of the application. e.g. espresso",
            "type": "string"
        },
        "summary": {
            "description": "Application's short description.",
            "type": "string"
        },
        "flavor": {
            "description": "Flavor of the executable within the Application suite. e.g. pw_scf, pw_bands, pp (for Quantum ESPRESSO).",
            "type": "string"
        },
        "version": {
            "description": "Application version. e.g. 5.3.5",
            "type": "string"
        },
        "exec": {
            "description": "The name of the executable file within the Application suite. e.g. pw.x, bands.x, pp.x, dos.x (for Quantum ESPRESSO).",
            "type": "string"
        }
    },
    "oneOf": [
        {
            "$ref": "file:software/espresso.json"
        },
        {
            "$ref": "file:software/vasp.json"
        },
        {
            "$ref": "file:software/ml.json"
	    },
	    {
            "$ref": "file:software/shell.json"
        },
        {
            "$ref": "file:software/python.json"
        }
    ],
    "required": [
        "name",
        "version",
        "exec"
    ]
}
