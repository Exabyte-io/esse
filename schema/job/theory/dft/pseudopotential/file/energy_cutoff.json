{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "energy cutoff schema",
    "type": "object",
    "properties": {
        "energyCutoff": {
            "type": "object",
            "description": "Highest energy of plane wave energies",
            "properties": {
                "max": {
                    "type": "number"
                },
                "min": {
                    "type": "number"
                },
                "units": {
                    "enum": [
                        "eV",
                        "rydberg",
                        "hartree"
                    ]
                }
            }
        }
    }
}
