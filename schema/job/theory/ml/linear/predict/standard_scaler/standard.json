{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Standard scaler parameters schema",
    "type": "object",
    "properties": {
        "mean": {
            "type": "array",
            "description": "means of datasets in training data",
            "items": {
                "type": "number"
            }
        },
        "variance": {
            "type": "array",
            "description": "variance in datasets in training data",
            "items": {
                "type": "number"
            }
        }
    }
}
