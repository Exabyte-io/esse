{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "scaler parameters schema",
    "type": "object",
    "properties": {
        "name": {
            "description": "name of variable",
            "enum":[
                "mean",
                "variance"
            ]
        },
        "values": {
            "type": "array",
            "description": "array of values corresponding to the variable. Example: variance in training data",
            "items": {
                "type": "number"
            }
        }
    }
}
