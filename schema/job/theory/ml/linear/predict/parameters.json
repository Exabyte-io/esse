{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "method parameters schema",
    "properties": {
        "property": {
            "type": "string",
            "description": "name of the property. Example: band_gaps"
        },
        "type": {
            "type": "string",
            "description": "type of the property. Example: direct"
        },
        "data": {
            "$ref": "file:data.json"
        }
    },
    "required": [
        "property",
        "data"
    ]
}
