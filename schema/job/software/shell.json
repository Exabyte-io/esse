{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Shell Scripting Language Schema",
    "type": "object",
    "properties": {
        "name": {
            "enum": [
                "shell"
            ]
        },
        "flavor": {
            "enum": [
                "sh",
                "bash",
                "zsh",
                "csh"
            ]
        },
        "summary": {
            "enum": [
                "Shell Script"
            ]
        },
        "version": {
            "enum": [
                "4.2.46"
            ]
        },
        "exec": {
            "enum": [
                "sh",
                "bash",
                "zsh",
                "csh"
            ]
        },
        "arguments": {
            "description": "Optional arguments passed the shell script",
            "type": "string"
        }
    }
}
