{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "method schema",
    "properties": {
        "type": {
            "description": "general type of this method, eg. `pseudopotential`",
            "type": "string"
        },
        "subtype": {
            "description": "general subtype of this method, eg. `ultra-soft`",
            "type": "string"
        },
        "precision": {
            "$ref": "file:method/precision.json"
        },
        "workflow": {
            "description": "simulation workflow used inside this method.",
            "$ref": "file:method/workflow.json"
        },
        "data": {
            "description": "additional data specific to method, eg. array of pseudopotentials",
            "type": "object"
        }
    },
    "oneOf": [
        {
            "$ref": "file:../theory/dft/pseudopotential.json"
        },
        {
            "$ref": "file:../theory/dft/local-orbital.json"
        },
        {
            "$ref": "file:../theory/ml/prediction.json"
        },
        {
            "$ref": "file:../theory/ml/classification.json"
        }
    ],
    "required": [
        "type",
        "precision",
        "workflow"
    ]
}
