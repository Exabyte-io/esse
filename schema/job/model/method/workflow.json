{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "workflow schema",
    "type": "object",
    "properties": {
        "name": {
            "description": "Human-readable name of the workflow. e.g. Total-energy",
            "type": "string"
        },
        "properties": {
            "description": "Array of characteristic properties calculated by this workflow",
            "type": "array",
            "items": {
                "description": "property names, eg. `band_gaps`, `band_structure`",
                "type": "string"
            }
        },
        "subworkflows": {
            "description": "Array of subworkflows",
            "type": "array",
            "items": {
                "$ref": "file:workflow.json"
            }
        },
        "units": {
            "description": "Contains the Units of the Workflow",
            "type": "array",
            "items": {
                "$ref": "file:workflow/unit.json"
            }
        }
    },
    "required": [
        "name"
    ]
}
