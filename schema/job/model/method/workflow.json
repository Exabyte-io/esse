{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "workflow schema",
    "type": "object",
    "properties": {
        "name": {
            "description": "Human-readable name of the workflow. e.g. Total-energy",
            "type": "string"
        },
        "subworkflow": {
            "description": "Whether this is the a subworkflow",
            "type": "boolean",
            "default": false
        },
        "units": {
            "description": "Contains the Units of the Workflow",
            "type": "array",
            "items": {
                "$ref": "file:workflow/unit.json"
            }
        }
    },
    "required": [
        "name"
    ]
}
