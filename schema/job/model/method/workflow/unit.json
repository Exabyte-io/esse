{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "unit schema",
    "type": "object",
    "properties": {
        "type": {
            "description": "type of the unit.",
            "type": "string",
            "enum": [
                "execution",
                "map",
                "reduce",
                "assignment",
                "condition",
                "exit"
            ]
        },
        "name": {
            "description": "name of the unit. e.g. pw_scf",
            "type": "string"
        },
        "status": {
            "description": "Status of the unit.",
            "type": "string",
            "enum": [
                "idle",
                "running",
                "error"
            ]
        },
        "head": {
            "description": "Whether this unit is the first one to be executed.",
            "type": "boolean"
        },
        "flowchartId": {
            "description": "Identity of the unit in the workflow. Used to trace the execution flow of the workflow.",
            "type": "string"
        },
        "next": {
            "description": "Next unit's flowchartId. If empty, the current unit is the last.",
            "type": "string"
        },
        "preProcessors": {
            "description": "Array of pre-processors.",
            "type": "array",
            "items": {
                "type": "object"
            }
        },
        "monitors": {
            "description": "Array of monitors.",
            "type": "array",
            "items": {
                "$ref": "file:unit/_result.json"
            }
        },
        "postProcessors": {
            "description": "Array of post-processors.",
            "type": "array",
            "items": {
                "type": "object"
            }
        },
        "results": {
            "description": "Resulting properties extracted from the unit, besides the textual output.",
            "type": "array",
            "items": {
                "oneOf": [
                    {
                        "$ref": "file:unit/_result.json"
                    },
                    {
                        "$ref": "../../../theory/ml/linear/parameters.json"
                    }
                ]
            }
        },
        "execution": {
            "description": "Contains information about the execution unit..",
            "$ref": "file:unit/execution.json"
        },
        "assignment": {
            "description": "Contains information about the assignment unit.",
            "$ref": "file:unit/assignment.json"
        },
        "condition": {
            "description": "Contains information about the condition unit.",
            "$ref": "file:unit/condition.json"
        },
        "map": {
            "description": "Contains information about the map unit.",
            "$ref": "file:unit/map.json"
        }
    },
    "required": [
        "type",
        "name",
        "head",
        "flowchartId"
    ]
}
