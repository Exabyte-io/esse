{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Execution unit text input schema",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "name": {
                "description": "Input file name. e.g. pw_scf.in",
                "type": "string"
            },
            "content": {
                "description": "Content of the input file. e.g. &CONTROL    calculation='scf' ...",
                "type": "string"
            }
        },
        "required": [
            "name",
            "content"
        ]
    }
}
