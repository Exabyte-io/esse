{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "execution unit schema",
    "type": "object",
    "properties": {
        "app": {
            "description": "Contains information about the simulation engine/application.",
            "$ref": "file:../../../../app.json"
        },
        "compute": {
            "description": "Unit's specific computational parameters. Overrides computeArgs object inside the Job entity.",
            "$ref": "file:../../../../compute.json"
        },
        "input": {
            "description": "Unit's input.",
            "type": "array",
            "items": {
                "oneOf": [
                    {
                        "description": "textual input (eg. for simulation engines)",
                        "$ref": "file:execution/input.json"
                    },
                    {
                        "description": "object input (eg. for machine learning)",
                        "$ref": "file:../../../../input.json"
                    }
                ]
            }
        }
    },
    "required": [
        "input",
        "app"
    ]
}
