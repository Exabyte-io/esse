{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "map unit schema",
    "type": "object",
    "properties": {
        "input": {
            "description": "Input information for map.",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "subworkflow": {
                        "description": "Name of subworkflow to run inside map",
                        "type": "string"
                    },
                    "name": {
                        "description": "Name of the input file. e.g. pw_scf.in",
                        "type": "string"
                    },
                    "target": {
                        "description": "Name of the target variable to substitute using the values below. e.g. K_POINTS",
                        "type": "string"
                    },
                    "values": {
                        "description": "Sequence of values for the target Jinja variable.",
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "required": [
                    "subworkflow",
                    "name",
                    "target",
                    "values"
                ]
            }
        }
    },
    "required": [
        "input"
    ]
}
