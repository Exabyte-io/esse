{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "method schema",
    "properties": {
        "type": {
            "description": "general type of this method, eg. `pseudopotential`",
            "type": "string"
        },
        "subtype": {
            "description": "general subtype of this method, eg. `ultra-soft`",
            "type": "string"
        },
        "precision": {
            "$ref": "file:method/precision.json"
        },
        "data": {
            "description": "additional data specific to method, eg. array of pseudopotentials",
            "type": "object"
        }
    },
    "oneOf": [
        {
            "$ref": "file:../../../theory/dft/_methods.json"
        },
        {
            "$ref": "file:../../../theory/ml/_methods.json"
        }
    ],
    "required": [
        "type",
        "precision"
    ]
}
