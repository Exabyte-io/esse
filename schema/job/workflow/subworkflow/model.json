{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "model schema",
    "properties": {
        "type": {
            "description": "general type of the model, eg. `dft`",
            "type": "string"
        },
        "subtype": {
            "description": "general subtype of the model, eg. `lda`",
            "type": "string"
        },
        "method": {
            "$ref": "file:model/method.json"
        },
        "accuracy": {
            "$ref": "file:model/accuracy.json"
        },
        "references": {
            "type": "array",
            "items": {
                "description": "literature reference, webpage etc.",
                "type": "string"
            }
        }
    },
    "oneOf": [
        {
            "$ref": "file:theory/dft.json"
        },
        {
            "$ref": "file:theory/ml.json"
        }
    ],
    "required": [
        "type",
        "subtype",
        "method"
    ]
}
