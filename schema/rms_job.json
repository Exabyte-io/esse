{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "RMS job schema",
    "properties": {
        "status": {
            "description": "job identifier.",
            "enum": [
                "pre-submission",
                "submitted",
                "active",
                "finished",
                "terminate_queued",
                "terminated",
                "error",
                "deleted",
                "timeout"
            ]
        },
        "name": {
            "description": "Human-readable name of the job",
            "type": "string",
            "maxLength": 300
        },
        "workDir": {
            "description": "The path to the working directory of this job.",
            "type": "string"
        },
        "compute": {
            "description": "Job's compute parameters",
            "$ref": "file:job/compute.json"
        },
        "workflow": {
            "description": "Arch-workflow for the job",
            "$ref": "file:workflow.json"
        },
        "_project": {
            "description": "Subset of the full information about the project that this job belongs to.",
            "type": "object",
            "properties": {
                "slug": {
                    "description": "project's slugified name field for Unix-naming safe purposes",
                    "type": "string"
                }
            },
            "required": [
                "slug"
            ]
        },
        "schemaVersion": {
            "description": "Job's schema version.",
            "type": "string"
        },
        "creator": {
            "description": "User that created this job.",
            "type": "object",
            "properties": {
                "name": {
                    "description": "Creator's username.",
                    "type": "string"
                }
            },
            "required": [
                "name"
            ]
        }
    },
    "required": [
        "status",
        "name",
        "schemaVersion",
        "compute",
        "workflow",
        "_project",
        "creator"
    ]
}
