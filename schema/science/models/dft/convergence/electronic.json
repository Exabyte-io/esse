{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "electronic self consistency convergence schema",
    "properties": {
        "name": {
            "enum": [
                "convergence_electronic"
            ]
        },
        "units": {
            "enum": [
                "eV",
                "rydberg",
                "hartree"
            ]
        },
        "data": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "step": {
                        "type": "number"
                    },
                    "value": {
                        "type": "number"
                    }
                }
            }
        }
    },
    "required": [
        "data"
    ]
}
