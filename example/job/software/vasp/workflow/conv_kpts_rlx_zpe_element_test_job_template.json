                                },
                                {
                                    "name": "KPOINTS",
                                    "content": "include_text(/export/compute/software/rupy/json/example/job/software/vasp/workflow/KPOINTS)"
                                },
                                {
                                    "name": "POSCAR",
                                    "content": "include_text(POSCAR)"
                                }
                            ]
                        },
                        "results": [
