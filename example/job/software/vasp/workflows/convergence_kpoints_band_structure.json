{
    "name": "vasp gamma point kpoint convergence plus band structure",
    "app": "vasp",
    "units": [
        {
            "type": "assignment",
            "flowchartId": "initialize_previous_energy",
            "next": "initialize_N_K",
            "head": true,
            "assignment": {
                "name": "previous_total_E",
                "value": "0"
            }
        },
        {
            "type": "assignment",
            "flowchartId": "initialize_N_K",
            "next": "run_scf_calculation",
            "assignment": {
                "name": "N_K",
                "value": "1"
            }
        },
        {
            "status": "idle",
            "flowchartId": "run_scf_calculation",
            "type": "compute",
            "next": "check_for_convergence",
            "app": {
                "name": "vasp",
                "exec": "vasp"
            },
            "monitors": [
                {
                    "name": "standard_output"
                },
                {
                    "name": "delta_energy"
                },
                {
                    "name": "total_energy"
                }
            ],
            "postProcessors": [],
            "input": [
                {
                    "name": "INCAR",
                    "content": "SYSTEM =  SiGe-FCC\n LWAVE  = .FALSE.\n LCHARG = .FALSE.\n ISMEAR =    1\n SIGMA  = 0.1"
                },
                {
                    "name": "KPOINTS",
                    "content": "Automatic mesh\n0\nGamma\n  {{N_K | default('1')}} {{N_K | default('1')}} {{N_K | default('1')}}\n  0.  0.  0.\n"
                },
                {
                    "name": "POSCAR",
                    "content": "SiGe\n 5.0\n 0.500000000 0.500000000 0.000000000\n 0.000000000 0.500000000 0.500000000\n 0.500000000 0.000000000 0.500000000\n Si Ge\n 1 1\n direct\n 0.000000000 0.000000000 0.000000000 Si\n 0.250000000 0.250000000 0.250000000 Ge"
                }
            ],
            "results": [
                {
                    "name": "total_energy"
                },
                {
                    "name": "band_gap"
                },
                {
                    "name": "bandstructure"
                }
            ]
        },
        {
            "flowchartId": "check_for_convergence",
            "type": "condition",
            "condition": {
                "input": [
                    {
                        "scope": "global",
                        "name": "previous_total_E"
                    },
                    {
                        "scope": "run_scf_calculation",
                        "name": "total_energy"
                    }
                ],
                "statement": "abs(previous_total_E-total_energy) < 1e-3",
                "then": "convergence_is_reached",
                "else": "assign_total_energy_to_previous_total_E",
                "maxOccurences": 100
            }
        },
        {
            "flowchartId": "assign_total_energy_to_previous_total_E",
            "type": "assignment",
            "next": "increase_N_K_by_1",
            "assignment": {
                "input": [
                    {
                        "scope": "run_scf_calculation",
                        "name": "total_energy"
                    }
                ],
                "name": "previous_total_E",
                "value": "total_energy"
            }
        },
        {
            "flowchartId": "increase_N_K_by_1",
            "type": "assignment",
            "next": "run_scf_calculation",
            "assignment": {
                "input": [
                    {
                        "scope": "global",
                        "name": "N_K"
                    }
                ],
                "name": "N_K",
                "value": "N_K+1"
            }
        },
        {
            "flowchartId": "convergence_is_reached",
            "type": "assignment",
            "next": "run_band_structure",
            "assignment": {
                "input": [
                    {
                        "scope": "global",
                        "name": "N_K"
                    }
                ],
                "name": "N_K",
                "value": "N_K-1"
            }
        },
        {
            "status": "idle",
            "flowchartId": "run_band_structure",
            "type": "compute",
            "next": "done_with_convergence_plus_band_structure",
            "app": {
                "flavor": "vasp",
                "exec": "vasp",
                "name": "vasp"
            },
            "results": [
                {
                    "name": "density_of_states"
                },
                {
                    "name": "band_gap"
                },
                {
                    "name": "total_energy"
                },
                {
                    "name": "band_structure"
                },
            ],
            "monitors": [
                {
                    "name": "standard_output"
                },
                {
                    "name": "delta_energy"
                },
                {
                    "name": "total_energy"
                }
            ]
        },
        {
            "flowchartId": "done_with_convergence_plus_band_structure",
            "type": "exit",
            "name": "exit",
            "status": "idle",
            "app": {},
            "exit": {
                "throwException": false
            }
        }
    ]
}
