{
    "name": "K point convergence",
    "app": "espresso",
    "units": [
        {
            "type": "assignment",
            "flowchartId": "init_tolerance",
            "next": "init_energy",
            "head": true,
            "assignment": {
                "name": "tolerance",
                "value": "0"
            }
        },
        {
            "type": "assignment",
            "flowchartId": "init_energy",
            "next": "init_N_K_x",
            "assignment": {
                "name": "previous_value",
                "value": "0"
            }
        },
        {
            "type": "assignment",
            "flowchartId": "init_N_K_x",
            "next": "init_N_K_y",
            "assignment": {
                "name": "N_K_x",
                "value": "1"
            }
        },
        {
            "type": "assignment",
            "flowchartId": "init_N_K_y",
            "next": "init_N_K_z",
            "assignment": {
                "name": "N_K_y",
                "value": "1"
            }
        },
        {
            "type": "assignment",
            "flowchartId": "init_N_K_z",
            "next": "run_scf_calculation",
            "assignment": {
                "name": "N_K_z",
                "value": "1"
            }
        },
        {
            "flowchartId": "run_scf_calculation",
            "type": "compute",
            "next": "check_for_convergence",
            "app": {
                "flavor": "pw_scf",
                "version": "5.1.1",
                "name": "espresso",
                "exec": "pw.x",
                "summary": "Quantum Espresso"
            },
            "results": [
                {
                    "name": "total_energy"
                }
            ],
            "monitors": [
                {
                    "name": "scf_accuracy"
                },
                {
                    "name": "standard_output"
                }
            ],
            "input": [
                {
                    "content": "include_text(pw_scf.in)",
                    "name": "pw_scf.in"
                }
            ]
        },
        {
            "flowchartId": "check_for_convergence",
            "type": "condition",
            "condition": {
                "input": [
                    {
                        "scope": "global",
                        "name": "previous_value"
                    },
                    {
                        "scope": "run_scf_calculation",
                        "name": "total_energy"
                    }
                ],
                "statement": "abs(previous_value-total_energy) < tolerance",
                "then": "convergence_is_reached",
                "else": "save_previous_value",
                "maxOccurences": 100
            }
        },
        {
            "flowchartId": "save_previous_value",
            "type": "assignment",
            "next": "increase_N_K_x_by_1",
            "assignment": {
                "input": [
                    {
                        "scope": "run_scf_calculation",
                        "name": "total_energy"
                    }
                ],
                "name": "previous_value",
                "value": "total_energy"
            }
        },
        {
            "flowchartId": "increase_N_K_x_by_1",
            "type": "assignment",
            "next": "increase_N_K_y_by_1",
            "assignment": {
                "input": [
                    {
                        "scope": "global",
                        "name": "N_K_x"
                    }
                ],
                "name": "N_K_x",
                "value": "N_K_x+1"
            }
        },
        {
            "flowchartId": "increase_N_K_y_by_1",
            "type": "assignment",
            "next": "increase_N_K_z_by_1",
            "assignment": {
                "input": [
                    {
                        "scope": "global",
                        "name": "N_K_y"
                    }
                ],
                "name": "N_K_y",
                "value": "N_K_y+1"
            }
        },
        {
            "flowchartId": "increase_N_K_z_by_1",
            "type": "assignment",
            "next": "run_scf_calculation",
            "assignment": {
                "input": [
                    {
                        "scope": "global",
                        "name": "N_K_z"
                    }
                ],
                "name": "N_K_z",
                "value": "N_K_z+1"
            }
        },
        {
            "flowchartId": "convergence_is_reached",
            "type": "compute",
            "next": "exit",
            "app": {
                "flavor": "pw_scf",
                "version": "5.1.1",
                "name": "espresso",
                "exec": "pw.x",
                "summary": "Quantum Espresso"
            },
            "results": [
                {
                    "name": "band_structure"
                },
                {
                    "name": "band_gap"
                },
                {
                    "name": "total_energy"
                }
            ],
            "monitors": [
                {
                    "name": "scf_accuracy"
                },
                {
                    "name": "standard_output"
                }
            ]
        },
        {
            "flowchartId": "exit",
            "type": "exit",
            "exit": {
                "throwException": false
            }
        }
    ]
}
