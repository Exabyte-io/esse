{
  "compilerOptions": {
    "target": "ES2018",
    "jsx": "react",
    "lib": ["ES2019"],
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "Node",
    "declaration": true,
    "outDir": "./lib",
    "noEmitOnError": false,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["mocha", "node"],
    "rootDir": "./src",
    "baseUrl": "./",
  },
  "include": [ 
    "./src",
    "modules.d.ts"
  ],
  "exclude": [
      "node_modules",
      "lib"
  ],
  "ts-node": {
    "files": true,
    "compilerOptions": {}
  },
}
